{
  "manifest_version": 3,
  "name": "Ransomware Detection",
  "description": "Detect ransomware in downloaded files",
  "version": "1.0",
  "permissions": [
    "downloads",
    "notifications",
    "fileSystem",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost:5000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
